<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New_Boss">

    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Boss_name"
        android:id="@+id/name_boss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/name_boss"
        android:id="@+id/new_items"
        android:hint="Boss items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/new_items"
        android:id="@+id/new_location"
        android:hint="Boss location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/new_location"
        android:id="@+id/new_skill"
        android:hint="Boss strength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/new_skill"
        android:id="@+id/new_weapon_image"
        android:hint="Boss weakness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/new_weapon_image"
        android:id="@+id/new_image"
        android:hint="Boss image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        app:layout_constraintTop_toBottomOf="@+id/new_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/btn_add_boss"
        android:text="Add new Boss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>