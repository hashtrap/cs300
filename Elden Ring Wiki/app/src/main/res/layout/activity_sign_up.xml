<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up">

    <ImageView
        android:id="@+id/background_sign_up"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

<TextView
    android:id="@+id/intro"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:text="Create a new account"
    android:textSize="34sp"
    android:layout_marginTop="45dp"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/sign_up_img"
        app:layout_constraintTop_toBottomOf="@+id/intro"
        android:scaleType="centerCrop"
        android:src="@drawable/log_sign_logo"
        android:layout_marginTop="35dp"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_img"
        android:hint="Username"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:id="@+id/new_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/new_username"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="Password"
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/new_password"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="Email"
        android:id="@+id/new_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/new_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>

