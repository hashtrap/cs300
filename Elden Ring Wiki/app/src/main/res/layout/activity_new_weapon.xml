<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_weapon">

    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Weapon_name"
        android:id="@+id/name_weapon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/name_weapon"
        android:id="@+id/new_owner"
        android:hint="Weapon_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/new_owner"
        android:id="@+id/new_scale"
        android:hint="Boss location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/new_scale"
        android:id="@+id/new_skill"
        android:hint="Boss strength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/new_skill"
        android:id="@+id/new_weapon_image"
        android:hint="Boss weakness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <Button
        app:layout_constraintTop_toBottomOf="@+id/new_weapon_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/btn_add_weapon2"
        android:text="Add new Weapon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>